<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Transactions</title>
  <style>
    body {
      font-family: Arial, sans-serif;
      background-color: #f7f9fc;
      margin: 0;
      padding: 0;
      color: #333;
    }

    .container {
      max-width: 1000px;
      margin: 0 auto;
      padding: 20px;
    }

    h1 {
      color: #333;
      text-align: center;
    }

    nav {
      background-color: #cca423;
      padding: 15px 30px;
      display: flex;
      gap: 20px;
      flex-wrap: wrap;
    }

    nav a {
      color: #fff;
      text-decoration: none;
      font-weight: bold;
    }
    nav a:hover {
      text-decoration: underline;
    }

    /* Search/Filter form */
    form {
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 1px 6px rgba(0,0,0,0.1);
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 15px;
      align-items: end;
      margin-bottom: 30px;
    }

    form label {
      font-weight: bold;
      color: #555;
      display: block;
      margin-bottom: 5px;
    }

    form input,
    form select {
      padding: 10px;
      font-size: 15px;
      border: 1px solid #ccc;
      border-radius: 4px;
      width: 100%;
      box-sizing: border-box;
    }

    form button {
      grid-column: span 1;
      background-color: #2980b9;
      color: white;
      border: none;
      padding: 12px 20px;
      border-radius: 4px;
      cursor: pointer;
      font-size: 16px;
      transition: background-color 0.3s ease;
      max-width: 160px;
      height: 42px;
    }

    form button:hover {
      background-color: #1c5980;
    }

    /* Cards container */
    .cards-container {
      display: grid;
      gap: 20px;
    }

    /* Individual transaction cards */
    .transaction-card {
      background: white;
      padding: 20px;
      border-radius: 8px;
      box-shadow: 0 1px 8px rgba(0,0,0,0.1);
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .transaction-card h2 {
      margin: 0 0 10px 0;
      color: #2980b9;
      font-size: 1.4em;
    }

    .transaction-info {
      font-size: 14px;
      margin-bottom: 15px;
    }

    .card-actions {
      display: flex;
      gap: 10px;
    }

    .card-actions a,
    .card-actions button {
      padding: 10px 16px;
      border-radius: 4px;
      cursor: pointer;
      font-weight: bold;
      font-size: 14px;
      border: none;
      text-decoration: none;
      line-height: normal;
      height: auto;
      flex: 0;
    }

    .card-actions form {
      display: contents;
      margin: 0;
      padding: 0;
    }

    .card-actions a {
      background-color: #27ae60;
      color: white;
    }

    .card-actions a:hover {
      background-color: #1f874b;
    }

    .card-actions button {
      background-color: #c0392b;
      color: white;
    }

    .card-actions button:hover {
      background-color: #902220;
    }
  </style>
</head>

<body>
  <div class="container">
    <h1>All Transactions</h1>

    <!-- Search form -->
    <form action="/transactions/search" method="GET">
      <label for="name">Name:</label>
      <input type="text" id="name" name="name">

      <label for="type">Type</label>
      <select id="type" name="type">
        <option value="">-- Select category --</option>
        <option value="income">Income</option>
        <option value="expense">Expense</option>
      </select>

      <label for="minAmount">Minimum amount</label>
      <input type="number" id="minAmount" name="minAmount">

      <label for="maxAmount">Maximum amount</label>
      <input type="number" id="maxAmount" name="maxAmount">

      <label for="category">Category</label>
      <input type="text" id="category" name="category">

      <button type="submit">Search</button>
    </form>

    <!-- Transaction cards -->
    <div class="cards-container">
      <% transactions.forEach(transaction => { %>
        <div class="transaction-card">
          <h2><%= transaction.name %> - $<%= transaction.amount %></h2>
          <div class="transaction-info">
            <% if (transaction.description) { %>
              <p><strong>Description:</strong> <%= transaction.description %></p>
            <% } %>
            <p><strong>Date Created:</strong> <%= transaction.date.toISOString().split('T')[0] %></p>
          </div>
          <div class="card-actions">
            <a href="/transactions/<%= transaction._id %>/edit">Edit</a>
            <form action="/transactions/<%= transaction._id %>/delete" method="POST">
              <button type="submit" onclick="return confirm('Are you sure you want to delete this transaction?')">Delete</button>
            </form>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
</html>
